<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    


        <record id="project-genexa.view_project_project_filter" model="ir.ui.view">
            <field name="name">project.project.select</field>
            <field name="model">project.project</field>
            <field name="mode">primary</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <search string="Search Project">
                    <field name="name" string="Project Name"/>
                    <filter string="Presupuestar" name="Presupuestar" domain="[('state', '=',presupuestar'])]"/>
                    <filter string="Posible" name="Posible" domain="[('state', '=','posible')]"/>
                    <filter string="Arrancar" name="Arrancar" domain="[('state', '=','arrancar')]"/>
                    <filter string="Terminar" name="Terminar" domain="[('state', '=','terminar')]"/>
                    <filter string="Cobrar" name="Cobrar" domain="[('state', '=','cobrar')]"/>
                    <filter string="Cerrado" name="Arrancar" domain="[('state', '=','cerrado')]"/>
                    <separator/>
                    <filter string="Manager" domain="[('user_id','=',uid)]"/>
                    <filter string="Followed by Me" domain="[('message_is_follower','=',True)]"/>
                    <separator/>
                    <filter string="Important Messages" name="message_needaction" domain="[('message_needaction','=',True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <field name="user_id" string="Project Manager"/>
                    <field name="partner_id" string="Contact" filter_domain="[('partner_id', 'child_of', self)]" domain="[('customer','=',True)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Manager" name="Manager" context="{'group_by':'user_id'}"/>
                        <filter string="Contact" name="Partner" context="{'group_by':'partner_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_project_project_graph" model="ir.ui.view">
            <field name="name">project.project.graph</field>
            <field name="model">project.project</field>
            <field name="arch" type="xml">
                <graph string="Projects" type="bar">
                </graph>
            </field>
        </record>

        <!-- Project -->
        <record id="edit_project" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="mode">primary</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Project">
                <header>
