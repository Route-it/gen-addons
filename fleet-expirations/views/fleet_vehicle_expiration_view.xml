<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model='ir.ui.view' id='fleet_vehicle_expiration_tree'>
            <field name="name">Lista de Vencimientos de Vehiculos</field>
            <field name="model">fleet.vehicle.expiration</field>
            <field name="arch" type="xml">
                <tree string="Planificacion">
					<field name="fleet_vehicle" string="Vehiculo"/>
                    <field name="due_date" string="Fecha de vencimiento"/>
                    <field name="name" string="Nombre"/>
                </tree>
            </field>
        </record>
        
		<record model='ir.ui.view' id='fleet_vehicle_expiration_form'>
            <field name="name">Vencimiento de vehiculo</field>
            <field name="model">fleet.vehicle.expiration</field>
            <field name="arch" type="xml">
                <form string="Planificacion">
                    <sheet>
                        <group string="Datos de Vencimiento">
                            <group >
                                <label for="fleet_vehicle"/>
                            	<div>
	                                 <field name="fleet_vehicle" string="Vehiculo"/>
                            	</div>
                                <label for="due_date"/> 
                            	<div>
    	                            <field name="due_date" string="Fecha de Vencimiento"/>
                            	</div>
                            	<label for="name"/>
                            	<div>
        	                    	<field name="name" string="Nombre"/>
                            	</div>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        
		<record model='ir.ui.view' id='fleet_vehicle_expiration_calendar'>
            <field name="name">Calendario de vencimientos</field>
            <field name="model">fleet.vehicle.expiration</field>
            <field name="arch" type="xml">
                 <calendar string="Vencimientos de Flota" event_open_popup="True" 
                 			color="fleet_vehicle" date_start="due_date" 
                 			display="[fleet_vehicle] ; [name]" >
	                <field name="fleet_vehicle"/>
    	            <field name="due_date"/>
    	            <field name="name"/>
                </calendar>
            
			</field>
		</record>        
        
    </data>
</openerp>
