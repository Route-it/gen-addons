<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="expirations.list">
      <field name="name">Lista de vencimientos</field>
      <field name="model">expirations.expirations</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="due_date"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="expirations.form">
      <field name="name">Vencimiento</field>
      <field name="model">expirations.expirations</field>
      <field name="arch" type="xml">
        <form>
        	<group>
	          <field name="name"/>
	          <field name="description"/>
	          <field name="due_date"/>
	          <field name="advices"/>
        	</group>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="expirations.action_window">
      <field name="name">Venicmientos</field>
      <field name="res_model">expirations.expirations</field>
      <field name="view_mode">tree,form,calendar</field>
    </record>

    <!-- server action to the one above -->
